<script>

    document.body.addEventListener("click", function (event) {
        if (event.target.classList.contains("open-modal")) {

            const movieDetails = event.target.getAttribute("data-movie-details");


            const popupTitle = event.target.previousElementSibling.innerText;
            document.getElementById("popup-title").innerHTML = popupTitle;
            document.getElementById("popup-description").innerHTML = movieDetails;


            document.getElementById("popup-container").classList.remove("hidden");
        }
    });


    function closePopup() {
        document.getElementById("popup-container").classList.add("hidden");
    }


    document.getElementById("overlay").addEventListener("click", closePopup);
</script>
